PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# Database
# DATABASE_URL=

# API Keys
# Google Gemini API Key - Nano Banana Pro (gemini-3-pro-image-preview)
# 从 Google AI Studio 获取: https://aistudio.google.com/
GOOGLE_API_KEY=your-google-api-key-here

# 点对点连线配置
DOTS_USE_API=true
DOTS_POINT_COUNT=20

# Email Service (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Cron Jobs
ENABLE_CRON=true
WEEKLY_DELIVERY_CRON=0 8 * * 0
TIMEZONE=America/New_York

# Firebase Admin (for server-side Firestore access)
# Option 1: Service account JSON string
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account",...}
# Option 2: Use default credentials (for local dev with gcloud auth)
FIREBASE_PROJECT_ID=your-project-id

# Firebase Storage (云存储)
# 设置为 true 启用云存储，false 使用本地存储
USE_CLOUD_STORAGE=false
# Storage bucket 名称（默认为 projectId.appspot.com）
# FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
# 上传后是否删除本地文件
DELETE_LOCAL_AFTER_UPLOAD=false

# Admin API Key (for manual trigger)
ADMIN_KEY=your-admin-key-here

# Sentry Error Monitoring
# 从 https://sentry.io 获取 DSN
# SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
