PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# Database
# DATABASE_URL=

# API Keys
# Google Imagen API Key (用于 Number Path 和 Pattern Compare)
GOOGLE_API_KEY=your-google-api-key-here

# 点对点连线配置
DOTS_USE_API=true
DOTS_POINT_COUNT=20

# Email Service (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Cron Jobs
ENABLE_CRON=true
WEEKLY_DELIVERY_CRON=0 8 * * 0
TIMEZONE=America/New_York

# Firebase Admin (for server-side Firestore access)
# Option 1: Service account JSON string
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account",...}
# Option 2: Use default credentials (for local dev with gcloud auth)

# Admin API Key (for manual trigger)
ADMIN_KEY=your-admin-key-here
